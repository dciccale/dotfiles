[user]
  name = Denis Ciccale
  email = dciccale@gmail.com

[core]
  excludesfile = /Users/Denis/.gitignore
  editor = mvim -f

[color]
  ui = true # covers diff = true, status = auto, branch = auto
  interactive = auto

[merge]
  tool = mvim -d

[alias]
  s = status
  co = commit
  cm = commit -m
  cam = commit -a -m
  ch = checkout
  chp = checkout gh-pages
  chm = checkout master
  br = branch
  ph = push origin
  pl = pull
  unstage = reset HEAD
  unc = reset --soft HEAD^
  sh = stash
  unsh = stash apply
  rv = remote -v
  ra = remote add

# url shortcuts
[url "http://github.com/"]
  insteadOf = "gh:"

[url "git@github.com:"]
  insteadOf = "https://github.com/"
  insteadOf = "http://github.com/"
  insteadOf = "gh:"

[url "git@github.com:dciccale/"]
  insteadOf = "gd:"

[url "http://github.com/dciccale/"]
  insteadOf = "gd:"

[url "git@pdihub.hi.inet:"]
  insteadOf = "pdi:"

[url "git@pdihub.hi.inet:dc30/"]
  insteadOf = "dc30:"
[push]
	default = current
