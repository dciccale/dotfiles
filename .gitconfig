[user]
  name = Denis Ciccale
  email = dciccale@gmail.com

[core]
  excludesfile = /Users/Denis/.gitignore
  editor = mvim -f

[color]
  ui = true # covers diff = true, status = auto, branch = auto
  interactive = auto

[merge]
  tool = mvim -d

[alias]
  s = status
  co = commit
  com = commit -m
  coam = commit -a -m
  ch = checkout
  br = branch
  ph = push origin
  pl = pull
  revert = reset HEAD
  uncommit = reset --soft HEAD^

# github url shortcuts
[url "http://github.com/"]
  insteadOf = "gh:"

[url "git@github.com:"]
  insteadOf = "https://github.com/"
  insteadOf = "http://github.com/"
  insteadOf = "gh:"

[url "git@github.com:dciccale/"]
  insteadOf = "gd:"

[url "http://github.com/dciccale/"]
  insteadOf = "gd:"
