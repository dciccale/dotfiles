################################################################################
# Utilities

# Print http status every n seconds
# n defaults to 1s
# usage:
# http-ping google.com .5 (500 milliseconds)
# http-ping google.com 2 (2 seconds)
http-ping() {
  n=1 && (($#>1)) && n=$2
  while true
  do
    curl -o /dev/null --silent --head --write-out '%{http_code}\n' $1
    sleep ${n}
  done
}

# Usage: weather [location]
# Example: weather jerez
weather() {
  curl -4 wttr.in/$1
}
